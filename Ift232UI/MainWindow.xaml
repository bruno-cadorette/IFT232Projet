<Window x:Class="Ift232UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="MyGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="103*"/>
                <ColumnDefinition Width="103*"/>
                <ColumnDefinition Width="103*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0" Grid.Column="0">
                <ComboBoxItem>Joueur</ComboBoxItem>
            </ComboBox>
            <ComboBox Grid.Row="0" Grid.Column="1">
                <ComboBoxItem>Ville</ComboBoxItem>
            </ComboBox>
            <DockPanel  Grid.Row="0" Grid.Column="2">
                <Label>Tour:</Label>
                <Label>1</Label>
            </DockPanel>
        </Grid>
        <TabControl Grid.Row="1" Grid.Column="0">
            <TabItem Header="Ville">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0.338"/>
                        <GradientStop Color="#FFFFAE00" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FFE8E4D6"  Width="499" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="442*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="btnNewCity" Content="Créer ville" Grid.Column="2" HorizontalAlignment="Left" Margin="300,48,0,0" VerticalAlignment="Top" Width="119" Height="29"/>
                    <Button Name="btnNewBuilding" Content="Créer bâtiment" HorizontalAlignment="Left" Margin="300,147,0,0" VerticalAlignment="Top" Width="132" Height="101" Grid.Column="2"/>
                    <TextBox Name="tbNewCity" HorizontalAlignment="Left" Height="23" Margin="159,51,0,0" TextWrapping="Wrap" Text="Nom future ville" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
                    <ComboBox Name="cbSelectBuilding" HorizontalAlignment="Left" Margin="159,104,0,0" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
                    <TextBox Name="tbBuildingDatas"  Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="101" Margin="10,147,0,0" TextWrapping="Wrap" Text="Données sur bâtiment" VerticalAlignment="Top" Width="326"/>
                    <Label Content="Sélectionnez un bâtiment :" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top" Width="175" Grid.ColumnSpan="3"/>
                    <Label Content="Nommez votre ville : " HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="129"/>
                </Grid>
            </TabItem>
            <TabItem Header="Armée">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF7F3F3" Offset="0.344"/>
                        <GradientStop Color="#FFE0C1C1" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FFE0C0C0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="107*"/>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="353*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="24,19,0,0" VerticalAlignment="Top" Width="120"/>
                    <Button Content="Button" Grid.Column="3" HorizontalAlignment="Left" Margin="250,18,0,0" VerticalAlignment="Top" Width="93"/>
                    <TextBox Grid.Column="3" HorizontalAlignment="Left" Height="23" Margin="62,17,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.507,0.203"/>
                    <ListBox Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="144" Margin="24,62,0,0" VerticalAlignment="Top" Width="473"/>
                    <Button Content="Attaquer !!!" HorizontalAlignment="Left" Margin="24,211,0,0" VerticalAlignment="Top" Width="473" Grid.ColumnSpan="4" Height="39"/>
                </Grid>
            </TabItem>
            <TabItem Header="Marché">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF3F3F3" Offset="0"/>
                        <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                        <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                        <GradientStop Color="#FFBECDAF" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FFDCEACD">
                   
                    <Button Content="Button" HorizontalAlignment="Left" Margin="36,161,0,0" VerticalAlignment="Top" Width="123" Height="31"/>
                    <ComboBox HorizontalAlignment="Left" Margin="139,79,0,0" VerticalAlignment="Top" Width="120">
                        <ComboBoxItem>Bois</ComboBoxItem>
                        <ComboBoxItem>Whatever</ComboBoxItem>
                    </ComboBox>
                    <ComboBox HorizontalAlignment="Left" Margin="347,79,0,0" VerticalAlignment="Top" Width="120">
                        <ComboBoxItem>Bois</ComboBoxItem>
                        <ComboBoxItem>Whatever</ComboBoxItem>
                    </ComboBox>
                    <Label Content="Échanger " HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>

                </Grid>
            </TabItem>
            <TabItem Header="Technologies">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF3F3F3" Offset="0"/>
                        <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                        <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                        <GradientStop Color="#FFBAE8F0" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FFD0E6E5">
                    <ComboBox HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120"/>
                    <Button Content="Button" HorizontalAlignment="Left" Margin="393,220,0,0" VerticalAlignment="Top" Width="104" Height="28"/>
                </Grid>
            </TabItem>
            <TabItem Header="Information">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF3F3F3" Offset="0"/>
                        <GradientStop Color="#FFEBEBEB" Offset="0.288"/>
                        <GradientStop Color="#FFDDDDDD" Offset="0.272"/>
                        <GradientStop Color="#FFAB7FF9" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FFDAD2E4">
                    <TextBox Name="tbReadme" HorizontalAlignment="Left" Height="238" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="487"/>
                </Grid>
            </TabItem>
            <TabItem Header="Options">
                <Grid Background="#FFF0F0F0"  Width="499" Margin="4,0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="442*"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="btnSave" Content="SAUVEGARDE" HorizontalAlignment="Left" Margin="33,71,0,0" VerticalAlignment="Top" Width="436" Grid.ColumnSpan="3" Height="128"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
